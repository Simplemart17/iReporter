{
  "name": "ireporter",
  "version": "1.0.0",
  "description": "This is a platform to bring to notice any form of corruption, and also report on things that needs government intervention",
  "main": "app.js",
  "scripts": {
    "test": "mocha ./app/tests/test.js --require babel-polyfill --require babel-register --exit",
    "dev": "nodemon ./app/app.js --exec babel-node",
    "build": "rm -rf build && mkdir build && babel -d ./build ./app -s",
    "start": "node ./build/app",
    "heroku-postbuild": "npm run build",
    "coverage": "nyc npm test && nyc report --reporter=lcov --reporter=text --reporter=lcovonly || coveralls",
    "local": "nyc --reporter=text --reporter=html mocha ./app/tests/test.js --require babel-polyfill --require babel-register --exit",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Simplemart17/iReporter.git"
  },
  "keywords": [
    "reports",
    "corruption",
    "project"
  ],
  "author": "Martins Aloba",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Simplemart17/iReporter/issues"
  },
  "homepage": "https://github.com/Simplemart17/iReporter#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.3",
    "chai-http": "^4.2.0",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "istanbul-coveralls": "^1.0.3",
    "mocha-lcov-reporter": "^1.3.0",
    "moment": "^2.22.2",
    "nyc": "^13.1.0",
    "supertest": "^3.3.0"
  },
  "engines": {
    "node": "10.13.0"
  }
}
